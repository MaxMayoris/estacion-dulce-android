<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/compact_dialog_background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar estado"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Message with icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/dialogIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/dialogMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="El envío pasará a: EN PROGRESO"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Cancelar"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/compact_button_gray"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Confirmar"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/compact_button_blue"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

</LinearLayout>
