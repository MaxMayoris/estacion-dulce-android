<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Recipe Name and On Sale -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:layout_marginBottom="4dp"
                    android:textColor="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/recipeNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la receta" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/recipeOnSaleCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En venta"
                android:layout_marginStart="16dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Recipe Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles de la Receta"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costo"
                    android:layout_marginBottom="4dp"
                    android:textColor="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/recipeCostInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Costo"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio sugerido"
                    android:layout_marginBottom="4dp"
                    android:textColor="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/recipeSuggestedPriceInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio sugerido"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio de venta"
                    android:layout_marginBottom="4dp"
                    android:textColor="@android:color/darker_gray" />
                <EditText
                    android:id="@+id/recipeSalePriceInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio de venta"
                    android:inputType="numberDecimal" />
            </LinearLayout>
        </LinearLayout>

        <!-- Categories Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CategorÃ­as"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <!-- Dropdown for Available Categories -->
        <Spinner
            android:id="@+id/categorySelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Placeholder for Empty Dropdown -->
        <TextView
            android:id="@+id/categoryPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No categories available to add."
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Placeholder for Empty Tags -->
        <TextView
            android:id="@+id/categoryTagsPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No categories added."
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <!-- Tags Container -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/categoryTagsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:alignItems="flex_start"
            app:flexWrap="wrap"
            app:justifyContent="flex_start" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveRecipeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
