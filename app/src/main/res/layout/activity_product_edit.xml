<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- The ActionBar will be provided by the theme -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre Producto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Producto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/productNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nombre"/>

        <!-- Row: Select de Medidas y Costo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Grupo Medida -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medida"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <Spinner
                    android:id="@+id/measureDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Grupo Costo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costo"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <EditText
                    android:id="@+id/productCostInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese el costo"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row: Cantidad Mínima and Stock con botones de incremento/decremento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Grupo Cantidad Mínima -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad Mínima"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/minQtyDecrementButton"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple_400"
                        android:text="–"/>
                    <EditText
                        android:id="@+id/productMinimumQuantityInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Ingrese la cantidad mínima"
                        android:inputType="numberDecimal"/>
                    <Button
                        android:id="@+id/minQtyIncrementButton"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple_400"
                        android:text="+"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Grupo Stock -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/stockDecrementButton"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple_400"
                        android:text="–"/>
                    <EditText
                        android:id="@+id/productStockInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Ingrese el stock"
                        android:inputType="numberDecimal"/>
                    <Button
                        android:id="@+id/stockIncrementButton"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:backgroundTint="@color/purple_400"
                        android:text="+"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveProductButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
