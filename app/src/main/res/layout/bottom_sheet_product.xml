<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/productNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Producto"
            android:visibility="gone"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/productNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Producto"
            android:inputType="text" />

        <!-- Measure Selection -->
        <TextView
            android:id="@+id/measureLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medida"
            android:visibility="gone"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/measureDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Stock -->
        <TextView
            android:id="@+id/productStockLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:visibility="gone"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/productStockInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stock"
            android:inputType="number" />

        <!-- Cost -->
        <TextView
            android:id="@+id/productCostLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo"
            android:visibility="gone"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/productCostInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo"
            android:inputType="numberDecimal" />

        <!-- Minimum Quantity -->
        <TextView
            android:id="@+id/productMinimumQuantityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad Minima"
            android:visibility="gone"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/productMinimumQuantityInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad Minima"
            android:inputType="numberDecimal" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveProductButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
