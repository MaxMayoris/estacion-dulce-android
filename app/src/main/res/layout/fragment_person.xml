<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar personas"
        android:background="@drawable/search_background"
        android:drawableStart="@drawable/ic_search_scaled"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:inputType="text"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- TableView for Persons -->
    <com.estaciondulce.app.customviews.TableView
        android:id="@+id/personTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Add Person Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPersonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="AÃ±adir persona"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/purple_700" />

</LinearLayout>
