<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar recetas"
        android:background="@drawable/search_background"
        android:drawableStart="@drawable/ic_search_scaled"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:inputType="text"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- TableView for Recipes -->
    <com.estaciondulce.app.customviews.TableView
        android:id="@+id/recipeTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Add Recipe Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="24dp"
        android:contentDescription="Agregar Receta"
        android:src="@drawable/ic_plus_modern"
        style="@style/CustomFloatingActionButtonStyle" />
</LinearLayout>
