<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Product Name -->
    <TextView
        android:id="@+id/addedProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dp"
        android:text="Producto"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp" />

    <!-- Product Cost -->
    <TextView
        android:id="@+id/addedProductCost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="8dp"
        android:text="Costo"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <!-- Quantity Container -->
    <LinearLayout
        android:id="@+id/productQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginEnd="4dp">
        <!-- This container will be populated with the custom quantity control in code -->
    </LinearLayout>

    <!-- Remove Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/removeProductButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Eliminar producto"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/purple_700"
        app:icon="@drawable/ic_delete"
        app:iconTint="@color/white"
        app:iconSize="20dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        style="@style/Widget.Material3.Button.IconButton" />

</LinearLayout>
