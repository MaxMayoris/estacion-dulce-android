<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/table_shadow" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="0dp" />
        </shape>
    </item>
    
    <!-- Main row background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/table_row_odd" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/table_border" />
        </shape>
    </item>
</layer-list>


