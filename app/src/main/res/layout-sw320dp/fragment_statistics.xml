<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="8dp">

    <!-- Tabs for Balance and Monthly Sales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/tabs_background"
        android:padding="2dp">

        <TextView
            android:id="@+id/monthlySalesTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ventas"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="@drawable/tab_selected_background"
            android:textColor="@color/white"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/balanceTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Compras"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="@drawable/tab_unselected_background"
            android:textColor="@color/text_secondary"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/annualTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Anual"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="@drawable/tab_unselected_background"
            android:textColor="@color/text_secondary"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Balance Tab Content -->
    <LinearLayout
        android:id="@+id/balanceTabContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Balance Chart -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                <!-- Month and Year Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="Mes"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxStrokeColor="@color/button_gradient_start"
                        app:hintTextColor="@color/button_gradient_start"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/balanceMonthSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:hint="Año"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxStrokeColor="@color/button_gradient_start"
                        app:hintTextColor="@color/button_gradient_start"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/balanceYearSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Monthly Balance Total Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/subtotal_background"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/balanceMonthlyBalanceTotalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balance mensual: $0"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Compras por Proveedor Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Compras por proveedor"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/balanceChart"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <TextView
                    android:id="@+id/balanceEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:text="No hay datos para mostrar"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Compras por Productos Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Compras por productos"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/balanceProductsChart"
                            android:layout_width="match_parent"
                            android:layout_height="280dp" />
                            
                    </LinearLayout>
                    
                </ScrollView>

                <TextView
                    android:id="@+id/balanceProductsEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:gravity="center"
                    android:text="No hay datos de productos para mostrar en este mes."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Costos de Envío Chart -->
                <TextView
                    android:id="@+id/shipmentCostsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Ganancias de envíos: $0"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/shipmentCostsChart"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <TextView
                    android:id="@+id/shipmentCostsEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:text="No hay datos de envíos para mostrar."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Monthly Sales Tab Content -->
    <LinearLayout
        android:id="@+id/monthlySalesTabContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Monthly Sales Chart -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                <!-- Month and Year Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:hint="Mes"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxStrokeColor="@color/button_gradient_start"
                        app:hintTextColor="@color/button_gradient_start"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/monthSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:hint="Año"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxStrokeColor="@color/button_gradient_start"
                        app:hintTextColor="@color/button_gradient_start"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/yearSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Monthly Balance Total Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/subtotal_background"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/monthlyBalanceTotalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balance mensual: $0"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Ventas Acumulativas Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Ventas acumuladas"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/monthlySalesChart"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <TextView
                    android:id="@+id/monthlySalesEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:text="No hay datos de ventas para mostrar en este mes."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Ventas por Receta Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Ventas por receta"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/recipeSalesChart"
                            android:layout_width="match_parent"
                            android:layout_height="280dp" />
                            
                    </LinearLayout>
                    
                </ScrollView>

                <TextView
                    android:id="@+id/recipeSalesEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:gravity="center"
                    android:text="No hay datos de recetas para mostrar en este mes."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Ventas por Cliente Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Ventas por cliente"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/clientSalesChart"
                            android:layout_width="match_parent"
                            android:layout_height="280dp" />
                            
                    </LinearLayout>
                    
                </ScrollView>

                <TextView
                    android:id="@+id/clientSalesEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:gravity="center"
                    android:text="No hay datos de clientes para mostrar en este mes."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Annual Tab Content -->
    <LinearLayout
        android:id="@+id/annualTabContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Annual Chart -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                <!-- Year Selection -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Año"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="@color/button_gradient_start"
                    app:hintTextColor="@color/button_gradient_start"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/annualYearSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Balance Mensual Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="Balance mensual"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/annualSalesByMonthChart"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <TextView
                    android:id="@+id/annualSalesByMonthEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:text="No hay datos de ventas para mostrar."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Ventas por Cliente Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Ventas por cliente"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/annualClientSalesChart"
                            android:layout_width="match_parent"
                            android:layout_height="280dp" />
                            
                    </LinearLayout>
                    
                </ScrollView>

                <TextView
                    android:id="@+id/annualClientSalesEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:gravity="center"
                    android:text="No hay datos de clientes para mostrar."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!-- Ventas por Receta Chart -->
                <TextView
                    android:id="@+id/annualShipmentProfitTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="Ventas por receta"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/annualShipmentProfitChart"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />

                <TextView
                    android:id="@+id/annualShipmentProfitEmptyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:gravity="center"
                    android:text="No hay datos de recetas para mostrar."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>

